# Development Environment Configuration
NODE_ENV=development
LOG_LEVEL=debug
MCP_SERVER_PORT=3000
ROOK_NAMESPACE=rook-ceph-dev
CEPH_CLUSTER_NAME=rook-ceph-dev
KUBERNETES_CONFIG_PATH=~/.kube/config

# Development-specific settings
ENABLE_DEBUG_MODE=true
MOCK_KUBERNETES_API=false
HEALTH_CHECK_INTERVAL=30
STORAGE_CLASS_NAME=rook-ceph-block-dev
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8080
MONITORING_ENABLED=true

# Resource limits for development
DEFAULT_CPU_REQUEST=100m
DEFAULT_MEMORY_REQUEST=128Mi
DEFAULT_CPU_LIMIT=500m
DEFAULT_MEMORY_LIMIT=512Mi

# Development cluster settings
MIN_REPLICA_COUNT=1
MAX_REPLICA_COUNT=3
ALLOW_UNSAFE_OPERATIONS=true
SKIP_UPGRADE_CHECKS=true