# Staging Environment Configuration
NODE_ENV=staging
LOG_LEVEL=info
MCP_SERVER_PORT=3001
ROOK_NAMESPACE=rook-ceph-staging
CEPH_CLUSTER_NAME=rook-ceph-staging
KUBERNETES_CONFIG_PATH=~/.kube/config

# Staging-specific settings
ENABLE_DEBUG_MODE=false
MOCK_KUBERNETES_API=false
HEALTH_CHECK_INTERVAL=45
STORAGE_CLASS_NAME=rook-ceph-block-staging
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8443
MONITORING_ENABLED=true

# Resource limits for staging
DEFAULT_CPU_REQUEST=300m
DEFAULT_MEMORY_REQUEST=256Mi
DEFAULT_CPU_LIMIT=750m
DEFAULT_MEMORY_LIMIT=768Mi

# Staging cluster settings
MIN_REPLICA_COUNT=2
MAX_REPLICA_COUNT=3
ALLOW_UNSAFE_OPERATIONS=false
SKIP_UPGRADE_CHECKS=false

# Performance tuning
CEPH_OSD_MEMORY_TARGET=2147483648
CEPH_MON_WARN_ON_LEGACY_CRUSH_TUNABLES=false
CEPH_MON_WARN_ON_CRUSH_STRAW_CALC_VERSION_ZERO=false

# Security settings
ENABLE_RBAC=true
ENABLE_NETWORK_POLICY=true
ENABLE_POD_SECURITY_POLICY=true