# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=warn
MCP_SERVER_PORT=3000
ROOK_NAMESPACE=rook-ceph
CEPH_CLUSTER_NAME=rook-ceph
KUBERNETES_CONFIG_PATH=/etc/kubernetes/kubeconfig

# Production-specific settings
ENABLE_DEBUG_MODE=false
MOCK_KUBERNETES_API=false
HEALTH_CHECK_INTERVAL=60
STORAGE_CLASS_NAME=rook-ceph-block
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8443
MONITORING_ENABLED=true

# Resource limits for production
DEFAULT_CPU_REQUEST=500m
DEFAULT_MEMORY_REQUEST=512Mi
DEFAULT_CPU_LIMIT=1000m
DEFAULT_MEMORY_LIMIT=1Gi

# Production cluster settings
MIN_REPLICA_COUNT=3
MAX_REPLICA_COUNT=5
ALLOW_UNSAFE_OPERATIONS=false
SKIP_UPGRADE_CHECKS=false

# Performance tuning
CEPH_OSD_MEMORY_TARGET=4294967296
CEPH_MON_WARN_ON_LEGACY_CRUSH_TUNABLES=false
CEPH_MON_WARN_ON_CRUSH_STRAW_CALC_VERSION_ZERO=false

# Security settings
ENABLE_RBAC=true
ENABLE_NETWORK_POLICY=true
ENABLE_POD_SECURITY_POLICY=true
ENABLE_ADMISSION_CONTROLLER=true
ENABLE_AUDIT_LOGGING=true

# High availability settings
ENABLE_MULTI_ZONE_DEPLOYMENT=true
ENABLE_ANTI_AFFINITY=true
ENABLE_PRIORITY_CLASSES=true
ENABLE_RESOURCE_QUOTAS=true

# Backup and disaster recovery
ENABLE_BACKUP_SCHEDULE=true
BACKUP_RETENTION_DAYS=30
ENABLE_CROSS_REGION_REPLICATION=true